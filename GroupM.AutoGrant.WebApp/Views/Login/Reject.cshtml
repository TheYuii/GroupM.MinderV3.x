
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/AutoGrant_Layout.cshtml";
}

@using (Html.BeginForm("Reject", "Login", FormMethod.Post))
{
    <div align="center">
        <input type="hidden" id="Token" name="Token" value="@(ViewBag.Token)">
        <table>
            <tr>
                <td>
                    <b>@Html.Label("Username", new { style = "font-family: 'Microsoft Sans Serif'; font-size: 10pt;" })</b>
                </td>
                <td>
                    &nbsp;&nbsp;@Html.TextBox("Username", "", new { style = "width: 300px; height: 16px;" })
                </td>
            </tr>
            <tr></tr>
            <tr></tr>
            <tr></tr>
            <tr>
                <td>
                    <b>@Html.Label("Password", new { style = "font-family: 'Microsoft Sans Serif'; font-size: 10pt;" })</b>
                </td>
                <td>
                    &nbsp;&nbsp;@Html.Password("Password", "", new { style = "width: 300px; height: 16px;" })
                </td>
            </tr>
            <tr></tr>
            <tr></tr>
            <tr></tr>
            <tr>
                <td></td>
                <td align="right">
                    <input type="submit" value="Login" style="background-color: royalblue; color: white; border: none; padding: 5px 15px; display: inline-block" />
                </td>
            </tr>
        </table>
        @if (@ViewBag.Message != null)
        {
            <script type="text/javascript">
                window.onload = function () {
                    alert("@ViewBag.Message");
                };
            </script>
        }
    </div>
}
